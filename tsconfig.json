{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "newLine": "lf",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "@Cli/Symbols": ["./src/ioc/cli.ioc.symbols.ts"],
      "@Cli/Container": ["./src/ioc/cli.ioc.ts"],
      "@Packages": ["./src/packages/index.ts"],
      "@Cli/Types": ["./types/index.d.ts"],
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
